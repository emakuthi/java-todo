{{#partial "content"}}

    {{#if editTask}}

        <form action="/tasks/{{task.id}}" method="post">
        <br>
            <label for="description">Edit this Section</label><br><hr>
            <input id="description" name="description" type="text" value="{{task.description}}">
        <br>
            <label for="categoryId">Update this Section's Department:</label><br><hr>
            <select id="categoryId" name="categoryId">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-Warning btn-sm">Submit</button>
        </form>
    {{else}}
        <h2>Add New Section </h2>

        <form action="/tasks" method="post">
            {{#if categories}}
            <label for="description">Section</label>
            <input id="description" name="description" type="text">
            <label for="categoryId">Select Department:</label>
                <select id="categoryId" name="categoryId">
                    {{#each categories}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right department?<a <a class="btn btn-default btn-sm" href="/categories/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a department before you add a section. <a class="btn btn-default btn-sm" href="/categories/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-primary btn-sm ">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}